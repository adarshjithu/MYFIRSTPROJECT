}
.header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60px;
  padding: 20px;
background-color: white;
}
.logo{
  display: flex;
  align-items: center;
  color: white;
}


.header-icons{
  display: flex;
  align-items: center;
}
.header-icons i{
  margin-right: 2rem;
  cursor: pointer;
}
.header-icons .account{
  width: 130px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header-icons .account img{
  width: 35px;
  height: 35px;
  cursor: pointer;
  border-radius: 50%;
}
.contain{
  
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
 
  width: 100%;

}

/* Side menubar section */
nav{
  background: #fff;
  width: 16%;
}
.side_navbar{
  border-radius: 5px;
 
  margin-left: 1.5%;
  margin-top: .5%;
  
  width: 14%;
  padding: 1px;
  display: flex;
  flex-direction: column;
  border-right: 1px solid rgb(176, 158, 158);

  

}

.side_navbar a{
 
  width: 100%;
  height: 50px;
  font-weight: 500;
  font-size: 15px;
  color:#C62F3B;
  
}

.side_navbar a:hover{
  background:#F7444E;
  color: white;
}

/* Main Body Section */
.main-body{
  width: 100%;
  padding: 1rem;
}


a{
  text-decoration: none;
}


/* Sidebar Section */



.customerHeader{
  display: flex;
  justify-content: space-between;

margin: 20px;
}

.customerDetails{
  width: 80%;
  height: 100%;
}
.customerBody{
  width: 100%;
}


.side_navbar a{
  display: flex;
  
  align-items:center;
 
  
  width: 100%;
}
.side_navbar a span{
  color: black;
 

 
}
.side_navbar a svg{
  margin-left: 10px;
  margin-right: 10px;

}
.ul{
  display:flex;
  list-style: none;
  background-color: white;
  width: 60%;
  
  border-radius: 5px;
  margin-left: 10px;
  border: 1px solid rgb(153, 129, 129);
}
.ul li a{
  border-radius: 5px;
  color: black;
}
.ul li{
  width: 20%;
}

.ul li a:hover{
  cursor: pointer;
  background-color: #DBDBDB;
  color: blue;
 

}

.tr th td{
  background-color: red;

}
.coupon{
    width: 100%;
    height: 45px;
    border-radius: 5px;
    border: 1px solid #F7444E;
    margin: 10px 0px 10px 0px;
}



@media screen and  (max-width:750px){
  .ul{
    display: flex;
    flex-direction: column;  }
  .side_navbar a span{
     display:none;
  }
  .ul li a{
    width: 100%;
  }
  .side_navbar a{
    display: flex;
    justify-content: center;
    align-items: center;
  }
}
