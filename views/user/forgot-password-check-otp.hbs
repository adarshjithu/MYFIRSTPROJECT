  <body>
 




    <hr>
<div class="container">
    <div class="row">
        <div class="row" style="display: flex; justify-content: center; align-items: center;">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                          <h3><i class="fa fa-lock fa-4x"></i></h3>
                          <h1 id="count"></h1>
                          <h2 class="text-center">OTP Authentication</h2>
                          
                          <p>Enter Your OTP Address Here</p>
                          {{email}}
                            <div class="panel-body">
                              
                              <form class="form" method="post" action="/forgot-password-check-otp">
                                <fieldset>
                                  <div class="form-group">
                                    <div class="input-group">
                                      <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                      
                                      <input id="emailInput" placeholder="OTP   " class="form-control" type="number" oninvalid="setCustomValidity('Please enter a valid email address!')" onchange="try{setCustomValidity('')}catch(e){}" required="" name="otp" value="">
                                    </div>
                                  </div>
                                  <div class="form-group" id="submit">
                                    <input id="submit" class="btn btn-lg btn-success btn-block" value="Submit" type="submit">
                                  </div>

                              
                                </fieldset>
                              </form>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
    </div>
</div>



<script>
    function counting(){
        var count =  30; 
           let int = setInterval(function(){
                document.getElementById("count").innerHTML= count; 
                count--;
                if(count==0){
                    document.getElementById("submit").innerHTML=  `<a href="/forgot-password-generate-otp" class="btn btn-primary" style="width:100%;">Resend</a>
                    <br><a href="/user_signup" class="btn btn-success" style="width:100%;">BacktoSignup</a>`
                    clearInterval(int)

                }
            },1000)
    }
    counting()
</script>
